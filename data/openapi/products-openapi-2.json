{
    "openapi": "3.0.1",
    "info": {
      "title": "ProductManagementApi",
      "version": "1.0.0"
    },
    "paths": {
      "/openapi": {
        "get": {
          "description": "GetOpenApiDefinition",
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      },
      "/products": {
        "get": {
          "description": "GetProducts",
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/ProductDTO"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "description": "AddProduct",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductDTO"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ProductDTO"
                  }
                }
              }
            }
          }
        },
        "put": {
          "description": "ModifyProduct",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductDTO"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ProductDTO"
                  }
                }
              }
            }
          }
        }
      },
      "/products/{id}": {
        "delete": {
          "description": "DeleteProduct",
          "parameters": [
            {
              "name": "id",
              "schema": {
                "type": "System.Guid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "ProductDTO": {
          "title": "ProductDTO",
          "properties": {
            "Id": {
              "title": "Id",
              "type": "string",
              "format": "uuid",
              "nullable": true
            },
            "RecordVersion": {
              "title": "RecordVersion",
              "type": "integer",
              "format": "int64"
            },
            "Name": {
              "title": "Name",
              "type": "string",
              "format": ""
            },
            "Description": {
              "title": "Description",
              "type": "string",
              "format": ""
            },
            "Price": {
              "title": "Price",
              "required": [
                "Amount",
                "Currency"
              ],
              "type": "object",
              "properties": {
                "Amount": {
                  "title": "Amount",
                  "type": "number",
                  "format": "double"
                },
                "Currency": {
                  "title": "Currency",
                  "type": "string",
                  "format": ""
                }
              },
              "format": "",
              "nullable": true
            },
            "VatPercentage": {
              "title": "VatPercentage",
              "type": "number",
              "format": "double"
            },
            "ImageUri": {
              "title": "ImageUri",
              "type": "string",
              "format": "",
              "nullable": true
            },
            "IsForSale": {
              "title": "IsForSale",
              "type": "boolean",
              "format": ""
            }
          }
        }
      }
    }
  }