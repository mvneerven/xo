{
    "list": {
        "control": {
            "properties": {
                "name": {
                    "class": "name"
                },
                "imageUri": {
                    "type": "img"                    
                },
                "description": {
                    "class": "small hide-xs"
                },
                "price": {
                    "format": "amount",
                    "type": "currency",
                    "currency": "EUR"
                }
            },
            "mappings": {
                "grid": [
                    {
                        "key": "name",
                        "height": "1rem",
                        "width": "12rem"
                    },
                    {
                        "key": "description",
                        "autoWidth": true
                    },
                    {
                        "key": "imageUri",
                        "width": "120px"
                    },
                    {
                        "key": "price",
                        "width": "7rem"
                    }
                ],
                "tiles": [
                    {
                        "key": "imageUri",
                        "height": "100px"
                    },
                    {
                        "key": "name",
                        "height": "auto"
                    },
                    {
                        "key": "price"
                    }
                ]
            }
        }
    },
    "edit": {
        "mappings": {
            "skip": [
                "recordVersion"
            ],
            "pages": {
                "prd": {
                    "legend": "Product"
                },
                "prc": {
                    "legend": "Pricing"
                }
            },
            "properties": {
                "name": {
                    "placeholder": "Product name..."
                },
                "description": {
                    "type": "multiline",
                    "rows": "1",
                    "placeholder": "Your product description...",
                    "autogrow": true
                },
                "id": {
                    "type": "hidden"
                },
                "imageUri": {
                    "page": "prd",
                    "type": "image",
                    "caption": "Image"
                },
                "price": {
                    "class": "compact",
                    "page": "prc",
                    "fields": {
                        "amount": {
                            "type": "number",
                            "placeholder": "9.90",
                            "prefix": "â‚¬",
                            "step": 0.01,
                            "required": true
                        }
                    },
                    "columns": "6em 4em",
                    "areas": "'amount currency'"
                },
                "vatPercentage": {
                    "type": "dropdown",
                    "page": "prc",
                    "items": [
                        {
                            "name": "None",
                            "value": 0
                        },
                        {
                            "name": "9%",
                            "value": 9
                        },
                        {
                            "name": "21%",
                            "value": 21
                        }
                    ]
                },
                "isForSale": {
                    "caption": "For Sale",
                    "page": "prc",
                    "type": "switch"
                }
            }
        }
    }
}