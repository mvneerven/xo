{
    "type": "listview",
    "name": "lv1",
    "view": "grid",
    "pageSize": 2,
    "views": [
        "grid",
        "tiles"
    ],
    "mappings": {
        "tiles": [
            {
                "key": "imageUri",
                "height": "200px"
            },
            {
                "key": "name",
                "height": "2rem"
            },
            {
                "key": "fileSizeAndType"
            }
        ],
        "grid": [
            {
                "key": "name",
                "width": "8rem",
                "sort": true,
                "filterInPlace": true,
                "searchURL": "http://localhost:4748/#/users/"
            },
            {
                "key": "imageUri",
                "width": "120px"
            },
            {
                "key": "description",
                "autoWidth": true,
                "class": "hide-sm",
                "sort": true
            },
            {
                "key": "fileSizeAndType"
            }
        ]
    },
    "properties": [
        {
            "name": "Name",
            "key": "name",
            "type": "text"
        },
        {
            "name": "Image",
            "key": "imageUri",
            "type": "img"
        },
        {
            "name": "Description",
            "key": "description",
            "type": "text",
            "class": "bold-text hide-sm"
        },
        {
            "key": "fileSizeAndType",
            "caption": "Details"
        }
    ],
    "items": [
